@page
@model PackageDelivery
@{
    ViewData["Title"] = "New package delivery";
    ViewData["Meta"] = "Add a new package delivery to the system";
}

<h2 class="text-2xl font-semibold">New package</h2>
<div class="divider"></div>

<form method="post" class="max-w-xl space-y-6">
    <div asp-validation-summary="ModelOnly" class="text-error text-sm"></div>

    <div class="form-control w-full">
        <label asp-for="FullName" class="label">
            <span class="label-text">Name</span>
        </label>
        <select asp-for="FullName" asp-items="Model.UserDropdown" class="select select-bordered w-full">
            <option selected disabled>-- Select User --</option>
        </select>
        <span asp-validation-for="FullName" class="text-error text-sm"></span>
    </div>

    <div class="form-control w-full">
        <label asp-for="Package.Carrier" class="label">
            <span class="label-text">Carrier</span>
        </label>
        <input asp-for="Package.Carrier" type="text" placeholder="USPS, FedEx, etc."
               class="input input-bordered w-full" />
        <span asp-validation-for="Package.Carrier" class="text-error text-sm"></span>
    </div>

    <div class="form-control mt-4">
        <button type="submit" class="btn btn-primary w-fit">Notify</button>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}