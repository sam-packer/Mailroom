@page
@using Mailroom.Utils
@model Mailroom.Pages.UnknownPackageModify.DetailsModel
@inject ICurrentUserService CurrentUserService

@{
    ViewData["Title"] = "Details";
    ViewData["Meta"] = "View details for an unknown package";
}

<h2>Package details</h2>
<hr/>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UnknownPackages.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UnknownPackages.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UnknownPackages.Carrier)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UnknownPackages.Carrier)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UnknownPackages.DeliveredDate)
        </dt>
        <dd class="col-sm-10">
            @TimeZoneUtil.ConvertToUserTime(Model.UnknownPackages.DeliveredDate, CurrentUserService.User.Timezone).ToString("g")
        </dd>
    </dl>
</div>
<div>
    <a asp-page="../Index">Back to List</a>
</div>
