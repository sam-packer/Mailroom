@page
@model UnknownPackageDelivery
@{
    ViewData["Title"] = "New unknown package";
    ViewData["Meta"] = "Add a new unknown package to the system";
}

<h2 class="text-2xl font-semibold">New unknown package</h2>
<div class="divider"></div>

<form method="post" class="max-w-xl space-y-6">
    <div asp-validation-summary="ModelOnly" class="text-error text-sm"></div>

    <div class="form-control w-full">
        <label asp-for="UnknownPackage.FullName" class="label">
            <span class="label-text">Full Name</span>
        </label>
        <input asp-for="UnknownPackage.FullName" type="text" placeholder="John Doe"
               class="input input-bordered w-full" />
        <span asp-validation-for="UnknownPackage.FullName" class="text-error text-sm"></span>
    </div>

    <div class="form-control w-full">
        <label asp-for="UnknownPackage.Carrier" class="label">
            <span class="label-text">Carrier</span>
        </label>
        <input asp-for="UnknownPackage.Carrier" type="text" placeholder="USPS, FedEx, etc."
               class="input input-bordered w-full" />
        <span asp-validation-for="UnknownPackage.Carrier" class="text-error text-sm"></span>
    </div>

    <div class="form-control mt-4">
        <button type="submit" class="btn btn-primary w-fit">Ok</button>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}