@page
@model Mailroom.Pages.PackageModify.EditModel

@{
    ViewData["Title"] = "Edit";
    ViewData["Meta"] = "Edit details for a package";
}

<h2 class="text-2xl font-semibold">Edit Package</h2>
<div class="divider"></div>

<form method="post" class="max-w-lg space-y-4">
    <div asp-validation-summary="ModelOnly" class="text-error text-sm"></div>

    <input type="hidden" asp-for="CurrentPackage.PackageId" />

    <div class="form-control">
        <label asp-for="Carrier" class="label">
            <span class="label-text">Carrier</span>
        </label>
        <input asp-for="Carrier" class="input input-bordered w-full" />
        <span asp-validation-for="Carrier" class="text-error text-sm"></span>
    </div>

    <div class="form-control">
        <label asp-for="PickupDate" class="label">
            <span class="label-text">Pickup Date</span>
        </label>
        <input asp-for="PickupDate" class="input input-bordered w-full" />
        <span asp-validation-for="PickupDate" class="text-error text-sm"></span>
    </div>

    <div class="form-control">
        <label class="cursor-pointer label">
            <span class="label-text">@Html.DisplayNameFor(m => m.Delivered)</span>
            <input asp-for="Delivered" type="checkbox" class="checkbox checkbox-primary" />
        </label>
    </div>

    <div class="form-control pt-2">
        <button type="submit" class="btn btn-primary w-fit">Save</button>
    </div>
</form>

<div class="mt-4">
    <a asp-page="../Index" class="link link-secondary">‚Üê Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}