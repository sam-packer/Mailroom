@page
@using Mailroom.Utils
@model Mailroom.Pages.PackageModify.DeleteModel
@inject ICurrentUserService CurrentUserService

@{
    ViewData["Title"] = "Delete";
    ViewData["Meta"] = "Remove a package from the system";
}

<h2>Delete package?</h2>
<hr/>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Packages.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Packages.User.UserId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Packages.Carrier)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Packages.Carrier)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Packages.DeliveredDate)
        </dt>
        <dd class="col-sm-10">
            @TimeZoneUtil.ConvertToUserTime(Model.Packages.DeliveredDate, CurrentUserService.Timezone).ToString("g")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Packages.PickedUpDate)
        </dt>
        <dd class="col-sm-10">
            @(Model.Packages.PickedUpDate == DateTime.MinValue
                ? "Not Picked Up"
                : TimeZoneUtil.ConvertToUserTime(Model.Packages.PickedUpDate, CurrentUserService.Timezone).ToString("g"))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Packages.Delivered)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Packages.Delivered)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Packages.PackageId"/>
        <input type="submit" value="Delete" class="btn btn-danger"/> |
        <a asp-page="../Index">Back to List</a>
    </form>
</div>
