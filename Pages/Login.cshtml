@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
    ViewData["Meta"] = "Login page for Mailroom Management System";
}

<div class="max-w-md mx-auto mt-10 p-6 bg-base-200 rounded-2xl shadow-lg">
    <h2 class="text-2xl font-semibold text-center mb-6">Login</h2>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-error mb-4">
            <span>@Model.ErrorMessage</span>
        </div>
    }

    <form method="post" class="space-y-4">
        <div>
            <label asp-for="Email" class="label">
                <span class="label-text">Email</span>
            </label>
            <input asp-for="Email" class="input input-bordered w-full" />
            <span asp-validation-for="Email" class="text-error text-sm"></span>
        </div>

        <div>
            <label asp-for="Password" class="label">
                <span class="label-text">Password</span>
            </label>
            <input asp-for="Password" type="password" class="input input-bordered w-full" />
            <span asp-validation-for="Password" class="text-error text-sm"></span>
        </div>

        <div class="flex justify-end">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}