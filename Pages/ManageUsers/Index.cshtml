@page
@model IndexModel

@{
    ViewData["Title"] = "Users";
    ViewData["Meta"] = "A list of users in the application";
}

<h2>Users</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-page="Create" class="btn btn-success">Create New</a>

    <form method="get" class="d-flex">
        <input type="text" name="Search" value="@Model.Search" class="form-control w-auto me-2"
               placeholder="Search users..."/>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>

@if (!Model.User.Any())
{
    <div class="alert alert-info" role="alert">
        No results found.
    </div>
}
else
{
    <table class="table table-striped table-hover align-middle">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User[0].First_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Last_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Building)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Unit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Role)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.User)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.First_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Last_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Building)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Unit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td class="text-end pe-4">
                    <a asp-page="./Edit" asp-route-id="@item.UserId" class="btn btn-sm btn-outline-info me-1">
                        Edit
                    </a>
                    <a asp-page="./Details" asp-route-id="@item.UserId" class="btn btn-sm btn-outline-primary me-1">
                        Details
                    </a>
                    <a asp-page="./Delete" asp-route-id="@item.UserId" class="btn btn-sm btn-outline-danger">
                        Delete
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

